@page
@model CarStore_RazorPages.Pages.AddModel
@{
	ViewData["Title"] = "Add page";
}

@* Note: Many of the "class=" instances reference Bootstrap sytles. *@

@* Begin render Add code block *@
<form method="post">
	@* The CarModel.Id is here so the full data model is represented on the page.
	The database behind the API will assign the id. *@
	<input hidden asp-for="CarModels.Id" />
	<div class="border p-3 mt-4" style="width:50%">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Add Car</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="CarModels.brand" class="h5"></label><br />
			@* Empty text box for the name of the car to be added. *@
			<input type="text" asp-for="CarModels.model" />
			<span asp-validation-for="CarModels.model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CarModels.model" class="h5"></label><br />
			@* Empty text box for the model of the car to be added. *@
			<input type="text" asp-for="CarModels.model" />
			<span asp-validation-for="CarModels.model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CarModels.color" class="h5"></label><br />
			@* Empty text box for the color of the car to be added. *@
			<input type="text" asp-for="CarModels.color" />
			<span asp-validation-for="CarModels.color" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CarModels.owner" class="h5"></label><br />
			@* Empty text box for the owner of the car to be added. *@
			<input type="text" asp-for="CarModels.owner" />
			<span asp-validation-for="CarModels.owner" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CarModels.price" class="h5"></label><br />
			@* Empty text box for the price of the car to be added. *@
			<input type="text" asp-for="CarModels.price" />
			<span asp-validation-for="CarModels.price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CarModels.isAvailable" class="h5"></label><br />
			@* Render the true/false instock state from the record in an editable checkbox. *@
			<input type="checkbox" asp-for="CarModels.isAvailable" style="width:20px; height:20px" />
			<label class="h7"><i class="bi bi-arrow-left"></i> Check the box if it's available.</label>
			<span asp-validation-for="CarModels.isAvailable" class="text-danger"></span>
		</div>
		@* Submit the addition or return to the Index page if the Add is cancelled.*@
		<button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Cancel</a>
	</div>
</form>
@* End render Add code block *@